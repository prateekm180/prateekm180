#include <iostream>
#include <string>
void printSuffixes(const std::string& str, std::string suffixes[], int size) {
std::cout << "Suffix String : [ ";
for (int i = 0; i < size; i++) std::cout << suffixes[i] << " ";
std::cout << "]\n";
}
void sortSuffixes(std::string suffixes[], int size) {
for (int i = 0; i < size - 1; i++) {
for (int j = 0; j < size - i - 1; j++) {
if (suffixes[j] > suffixes[j + 1]) std::swap(suffixes[j], suffixes[j 
+ 1]); 
}
}
}
void printSuffixTree(const std::string suffixes[], int size) {
std::cout << "Suffix Tree:\n";
for (int i = 0; i < size; i++) {
std::cout << "root";
for (int j = 0; j < suffixes[i].length(); j++) std::cout << " -> " <<
suffixes[i][j];
std::cout << "\n";
}
}
int main() {
std::string choice;
do {
std::string str;
std::cout << "Enter String : ";
std::cin >> str;
int size = str.length();
std::string suffixes[100]; 
for (int i = 0; i < size; i++) suffixes[i] = str.substr(i);
printSuffixes(str, suffixes, size);
sortSuffixes(suffixes, size);
std::cout << "Sorted Order : [ ";
for (int i = 0; i < size; i++) std::cout << suffixes[i] << " ";
std::cout << "]\n";
printSuffixTree(suffixes, size);
std::cout << "\n\nEnter choice : ";
std::cin >> choice;
} while(choice == "Yes" || choice == "yes");
}
